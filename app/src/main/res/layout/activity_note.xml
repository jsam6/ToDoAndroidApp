<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NoteActivity"
    android:background="@color/lightYellow">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ?attr/ : Dimension for actionToolbar size-->
        <!--ToolBar wraps itself along layout_note_toolbar-->
        <!--layout_note_toolbar has a default attribute height which follows actionBar default size-->
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            >

            <include layout="@layout/layout_note_toolbar"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.example.mcflurry.notes.LineEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="23sp"
        android:id="@+id/note_text"
        android:textColor="@color/black"
        android:padding="5dp"
        android:gravity="top"
        android:imeOptions="flagNoExtractUi"/>

</LinearLayout>